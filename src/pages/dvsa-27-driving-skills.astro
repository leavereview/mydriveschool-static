        </div>
      </div>
    </div>
  </section>

  <!-- Quick Skills Reference -->
  <section class="section bg-gray-50" id="reference">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-brand-navy mb-4">All 27 Skills at a Glance</h2>
        <p class="text-gray-600 mb-8">A quick reference to all 27 DVSA driving skills and their categories.</p>

        <div class="overflow-x-auto">
          <table class="w-full bg-white rounded-xl border border-gray-200 overflow-hidden shadow-sm text-sm">
            <thead>
              <tr class="bg-brand-navy text-white">
                <th class="px-4 py-3 text-left font-semibold">#</th>
                <th class="px-4 py-3 text-left font-semibold">Skill</th>
                <th class="px-4 py-3 text-left font-semibold">Category</th>
              </tr>
            </thead>
            <tbody>
              {skillGroups.flatMap((group) =>
                group.skills.map((skill, i) => (
                  <tr class={`border-t border-gray-100 ${i === 0 ? 'bg-gray-50' : 'bg-white'} hover:bg-brand-red-light/30 transition-colors`}>
                    <td class="px-4 py-3 font-bold text-brand-navy">{skill.number}</td>
                    <td class="px-4 py-3 text-gray-700">{skill.name}</td>
                    <td class="px-4 py-3">
                      <a href={group.href} class="text-brand-red hover:underline font-medium">{group.title}</a>
                    </td>
                  </tr>
                ))
              )}
