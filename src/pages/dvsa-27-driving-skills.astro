        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <FAQEnhanced
          site="driveschool"
          pageUrl="https://mydriveschool.software/dvsa-27-driving-skills/"
