---
import BaseLayout from '../layouts/BaseLayout.astro';

// SoftwareApplication Schema
const softwareApplicationSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "@id": "https://mydriveschool.software/#software",
  "name": "MyDriveSchool.Software",
  "alternateName": "MyDriveSchool",
  "description": "Complete driving school management software for driving instructors and schools. Lesson scheduling, student management, automated billing, and instructor allocation in one platform.",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Web",
  "offers": {
    "@type": "Offer",
    "@id": "https://mydriveschool.software/#free-trial",
    "price": "0",
    "priceCurrency": "GBP",
    "name": "14-Day Free Trial",
    "description": "Try MyDriveSchool.Software free for 14 days with full access",
    "availability": "https://schema.org/InStock",
    "url": "https://mydriveschool.software/contact/",
    "priceValidUntil": "2026-12-31"
  },
  "featureList": [
    "Lesson Scheduling with Conflict Detection",
    "Student Management",
    "Instructor Allocation",
    "Vehicle Compliance Tracking",
    "Invoicing & Payment Recording",
    "Test Date Management",
    "DVSA Competency Framework",
    "SMS & Email Reminders",
    "Student Self-Service Portal",
    "Reports & Analytics",
    "Recurring Lesson Series",
    "Role-Based Access Control"
  ],
  "url": "https://mydriveschool.software",
  "screenshot": "https://mydriveschool.software/images/dashboard-screenshot.jpg",
  "softwareVersion": "2.0",
  "applicationSubCategory": "Driving School Management",
  "audience": {
    "@type": "BusinessAudience",
    "audienceType": "Driving Schools, Driving Instructors, ADI Training Schools"
  }
};

// Free Trial Offer Schema
const offerSchema = {
  "@context": "https://schema.org",
  "@type": "Offer",
  "@id": "https://mydriveschool.software/#free-trial-offer",
  "name": "14-Day Free Trial - MyDriveSchool.Software",
  "description": "Try MyDriveSchool.Software free for 14 days with complete access to all features including lesson scheduling, student management, and automated billing. No credit card required.",
  "price": "0",
  "priceCurrency": "GBP",
  "priceValidUntil": "2026-12-31",
  "availability": "https://schema.org/InStock",
  "url": "https://mydriveschool.software/contact/",
  "seller": {
    "@type": "Organization",
    "name": "MyDriveSchool.Software"
  },
  "itemOffered": {
    "@type": "SoftwareApplication",
    "name": "MyDriveSchool.Software",
    "applicationCategory": "BusinessApplication"
  },
  "eligibleRegion": {
    "@type": "Place",
    "name": "United Kingdom"
  },
  "additionalProperty": [
    {
      "@type": "PropertyValue",
      "name": "Trial Duration",
      "value": "14 days"
    },
    {
      "@type": "PropertyValue",
      "name": "Credit Card Required",
      "value": "No"
    },
    {
      "@type": "PropertyValue",
      "name": "Full Feature Access",
      "value": "Yes"
    }
  ]
};

const features = [
  {
    icon: 'calendar',
    title: 'Smart Scheduling',
    description: 'Interactive calendar with day, week, and month views. Three-way conflict detection ensures no double-bookings across students, instructors, and vehicles. Drag-and-drop rescheduling and recurring lesson series.'
  },
  {
    icon: 'users',
    title: 'Student Management',
    description: 'Complete student profiles with search, filtering, and pagination. Track DVSA competencies across 17 categories and 62+ driving skills with a 6-level proficiency scale.'
  },
  {
    icon: 'credit-card',
    title: 'Packages & Invoicing',
    description: 'Lesson packages with configurable hours, pricing, and expiry dates. Create invoices with line items, track payment status, and send via email. Record cash, bank transfer, and cheque payments.'
  },
  {
    icon: 'chart',
    title: 'Business Analytics',
    description: 'Real-time dashboard with 8 business metrics. Financial reports with 6-month revenue trends, instructor utilisation reports, and student progress overviews.'
  },
  {
    icon: 'bell',
    title: 'Automated Reminders',
    description: 'Email reminders via Resend and SMS via Twilio with configurable timing. Per-student notification preferences. Full delivery logs with status tracking.'
  },
  {
    icon: 'mobile',
    title: 'Student Portal',
    description: 'Secure student login to view upcoming lessons, track DVSA competency progress, check package balances, and manage personal details. Reduces phone calls and WhatsApp messages.'
  }
];

const highlights = [
  {
    title: 'DVSA Competency Framework',
    description: 'Track 62+ driving competencies across 17 DVSA categories. Any instructor can pick up where the last left off.'
  },
  {
    title: 'Three-Way Conflict Detection',
    description: 'Every booking checks student, instructor, and vehicle availability simultaneously. Zero double-bookings, guaranteed.'
  },
  {
    title: 'Student Self-Service Portal',
    description: 'Students log in to view lessons, track their DVSA progress, and check package balances. Fewer phone calls, less WhatsApp.'
  }
];

const stats = [
  { number: 'Unlimited', label: 'Students & Lessons' },
  { number: '99.9%', label: 'Uptime Guarantee' },
  { number: '10+ hrs', label: 'Saved Weekly' },
  { number: '62+', label: 'DVSA Competencies' }
];
---

<BaseLayout title="Driving School Software - UK" description="DVSA progress tracking, three-way scheduling, and automated reminders. Purpose-built for UK driving schools. 14-day free trial.">
  <!-- Structured Data Schemas -->
  <script type="application/ld+json" set:html={JSON.stringify(softwareApplicationSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(offerSchema)} />

  <section class="relative overflow-hidden bg-gradient-to-br from-brand-navy via-brand-navy to-gray-900 text-white">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('/images/hero-driving.jpg'); background-size: cover; background-position: center;"></div>
    </div>
    <div class="container-custom relative py-20 md:py-32">
      <div class="max-w-3xl">
        <span class="badge-primary mb-6">Purpose-Built for UK Driving Schools</span>
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6">
          Run Your <span class="text-brand-red">Driving School</span> Like a Pro
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed">
          The all-in-one platform for driving instructors and schools. Scheduling, student management, payments, and more.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/contact/" class="btn-primary text-lg px-8 py-4">Start Free Trial</a>
          <a href="/driving-school-software/" class="btn-secondary text-lg px-8 py-4">See Features</a>
        </div>
        <p class="mt-6 text-sm text-gray-400">No credit card required • 14-day free trial</p>
      </div>
    </div>
  </section>

  <section class="py-12 bg-gray-50 border-b border-gray-100">
    <div class="container-custom">
      <p class="text-center text-sm text-gray-500 uppercase tracking-wider mb-8">Built to scale with your school</p>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        {stats.map((stat) => (
          <div>
            <div class="text-3xl md:text-4xl font-bold text-brand-navy">{stat.number}</div>
            <div class="text-sm text-gray-600 mt-1">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="badge-primary mb-4">Features</span>
        <h2 class="text-3xl md:text-5xl font-bold text-brand-navy mb-6">Everything You Need to Run Your Driving School</h2>
        <p class="text-xl text-gray-600">From DVSA competency tracking to three-way scheduling, we've got you covered.</p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="card group">
            <div class="w-12 h-12 rounded-xl bg-brand-red-light flex items-center justify-center mb-4 group-hover:bg-brand-red transition-colors">
              <svg class="w-6 h-6 text-brand-red group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {feature.icon === 'calendar' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />}
                {feature.icon === 'users' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />}
                {feature.icon === 'credit-card' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />}
                {feature.icon === 'chart' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />}
                {feature.icon === 'bell' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />}
                {feature.icon === 'mobile' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />}
              </svg>
            </div>
            <h3 class="text-xl font-bold text-brand-navy mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section bg-gray-50">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="badge-primary mb-4">For All Driving Schools</span>
          <h2 class="text-3xl md:text-4xl font-bold text-brand-navy mb-6">
            Built for Instructors and Schools of All Sizes
          </h2>
          <p class="text-lg text-gray-600 mb-6">
            Whether you're a solo instructor or manage a fleet of vehicles and instructors, MyDriveSchool adapts to your unique needs with flexible scheduling, multi-instructor support, and customizable lesson types.
          </p>
          <ul class="space-y-4 mb-8">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-brand-red flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700"><strong class="text-brand-navy">Solo Instructors:</strong> Simple scheduling, student management, and automatic reminders</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-brand-red flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700"><strong class="text-brand-navy">Multi-Instructor Schools:</strong> Team scheduling, vehicle allocation, and performance tracking</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-brand-red flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700"><strong class="text-brand-navy">Growing Schools:</strong> Role-based access control, vehicle fleet compliance, and 16 configurable settings pages</span>
            </li>
          </ul>
          <a href="/driving-school-software/" class="btn-primary">
            Explore Driving School Software
          </a>
        </div>
        <div class="relative">
          <img
            src="/images/feature-driving.jpg"
            alt="Student learning to drive with instructor"
            class="rounded-2xl shadow-2xl"
          />
          <div class="absolute -bottom-6 -left-6 bg-white rounded-xl shadow-lg p-4 hidden md:block">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 rounded-full bg-brand-red-light flex items-center justify-center">
                <svg class="w-6 h-6 text-brand-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <div class="font-bold text-brand-navy">All Schools</div>
                <div class="text-sm text-gray-500">One Platform</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-brand-navy text-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="bg-white/10 text-white px-3 py-1 rounded-full text-sm font-medium mb-4 inline-block">Why Us</span>
        <h2 class="text-3xl md:text-5xl font-bold mb-6">Why Schools Choose MyDriveSchool</h2>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {highlights.map((highlight) => (
          <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10">
            <h3 class="text-xl font-bold mb-4">{highlight.title}</h3>
            <p class="text-gray-300 leading-relaxed">{highlight.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Calculator Callout -->
  <section class="section bg-gradient-to-br from-brand-navy to-gray-900 text-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-flex items-center justify-center px-4 py-2 bg-brand-red-light/10 text-brand-red-light rounded-full text-sm font-medium mb-6">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          Free Tool
        </div>
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Know Your Numbers
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          Use our free Revenue Calculator to model your driving school income, instructor earnings,
          and profit—whether you're a solo ADI or running a multi-instructor school.
        </p>
        <a href="/driving-school-calculator/" class="btn-primary inline-flex items-center text-lg">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          Try the Calculator
        </a>
      </div>
    </div>
  </section>

  <section class="section bg-gradient-to-r from-brand-red to-brand-red-dark text-white">
    <div class="container-custom text-center">
      <h2 class="text-3xl md:text-5xl font-bold mb-6">Ready to Streamline Your Driving School?</h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Start your free trial today and see how MyDriveSchool.Software can transform your business.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact/" class="btn bg-white text-brand-red hover:bg-gray-100 text-lg px-8 py-4">Start Your Free Trial</a>
        <a href="/pricing/" class="btn bg-transparent border-2 border-white text-white hover:bg-white/10 text-lg px-8 py-4">View Pricing</a>
      </div>
    </div>
  </section>
</BaseLayout>
