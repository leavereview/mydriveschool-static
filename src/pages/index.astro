---
import BaseLayout from '../layouts/BaseLayout.astro';

const features = [
  {
    icon: 'calendar',
    title: 'Smart Scheduling',
    description: 'Drag-and-drop lesson scheduling with instructor availability, vehicle tracking, and automatic conflict detection.'
  },
  {
    icon: 'users',
    title: 'Student Management',
    description: 'Complete student profiles with progress tracking, test dates, documents, and communication history.'
  },
  {
    icon: 'credit-card',
    title: 'Billing & Payments',
    description: 'Automated invoicing, package management, and integrated payment processing with Stripe.'
  },
  {
    icon: 'chart',
    title: 'Business Analytics',
    description: 'Track instructor utilization, pass rates, revenue per student, and identify growth opportunities.'
  },
  {
    icon: 'bell',
    title: 'Automated Reminders',
    description: 'SMS and email reminders for lessons, test dates, and document renewals. Reduce no-shows by 60%.'
  },
  {
    icon: 'mobile',
    title: 'Instructor App',
    description: 'Mobile app for instructors to view schedules, update progress, and communicate with students on the go.'
  }
];

const testimonials = [
  {
    quote: "MyDriveSchool cut our admin time in half. Students book online, reminders go out automatically, and I can finally focus on teaching.",
    author: "Mike Richardson",
    role: "Owner, Pass First Driving School"
  },
  {
    quote: "The scheduling system is brilliant. No more double bookings or juggling spreadsheets. Our instructors love it.",
    author: "Sarah Chen",
    role: "Manager, City Drive Academy"
  },
  {
    quote: "Our pass rate improved 15% since implementing progress tracking. Students stay motivated and instructors stay accountable.",
    author: "David Thompson",
    role: "Owner, Thompson Driving"
  }
];

const stats = [
  { number: '300+', label: 'Driving Schools' },
  { number: '50,000+', label: 'Students Trained' },
  { number: '10+ hrs', label: 'Saved Weekly' },
  { number: '4.9/5', label: 'Customer Rating' }
];
---

<BaseLayout title="Home" description="MyDriveSchool.Software - The complete driving school management platform. Scheduling, student management, instructor allocation, and online booking.">
  <section class="relative overflow-hidden bg-gradient-to-br from-brand-navy via-brand-navy to-gray-900 text-white">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('/images/hero-driving.jpg'); background-size: cover; background-position: center;"></div>
    </div>
    <div class="container-custom relative py-20 md:py-32">
      <div class="max-w-3xl">
        <span class="badge-primary mb-6">#1 Driving School Software</span>
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6">
          Run Your <span class="text-brand-red">Driving School</span> Like a Pro
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed">
          The all-in-one platform for driving instructors and schools. Scheduling, student management, payments, and more.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/contact/" class="btn-primary text-lg px-8 py-4">Start Free Trial</a>
          <a href="/driving-school-software/" class="btn-secondary text-lg px-8 py-4">See Features</a>
        </div>
        <p class="mt-6 text-sm text-gray-400">No credit card required â€¢ 14-day free trial</p>
      </div>
    </div>
  </section>

  <section class="py-12 bg-gray-50 border-b border-gray-100">
    <div class="container-custom">
      <p class="text-center text-sm text-gray-500 uppercase tracking-wider mb-8">Trusted by driving schools worldwide</p>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        {stats.map((stat) => (
          <div>
            <div class="text-3xl md:text-4xl font-bold text-brand-navy">{stat.number}</div>
            <div class="text-sm text-gray-600 mt-1">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="badge-primary mb-4">Features</span>
        <h2 class="text-3xl md:text-5xl font-bold text-brand-navy mb-6">Everything You Need to Run Your Driving School</h2>
        <p class="text-xl text-gray-600">From online booking to student progress tracking, we've got you covered.</p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="card group">
            <div class="w-12 h-12 rounded-xl bg-brand-red-light flex items-center justify-center mb-4 group-hover:bg-brand-red transition-colors">
              <svg class="w-6 h-6 text-brand-red group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {feature.icon === 'calendar' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />}
                {feature.icon === 'users' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />}
                {feature.icon === 'credit-card' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />}
                {feature.icon === 'chart' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />}
                {feature.icon === 'bell' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />}
                {feature.icon === 'mobile' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />}
              </svg>
            </div>
            <h3 class="text-xl font-bold text-brand-navy mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section bg-brand-navy text-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="bg-white/10 text-white px-3 py-1 rounded-full text-sm font-medium mb-4 inline-block">Testimonials</span>
        <h2 class="text-3xl md:text-5xl font-bold mb-6">Loved by Driving Instructors</h2>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10">
            <div class="flex gap-1 mb-4">
              {[1,2,3,4,5].map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-gray-300 mb-6 leading-relaxed">"{testimonial.quote}"</p>
            <div>
              <div class="font-semibold">{testimonial.author}</div>
              <div class="text-sm text-gray-400">{testimonial.role}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section bg-gradient-to-r from-brand-red to-brand-red-dark text-white">
    <div class="container-custom text-center">
      <h2 class="text-3xl md:text-5xl font-bold mb-6">Ready to Streamline Your Driving School?</h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Join hundreds of driving instructors already using MyDriveSchool.Software.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact/" class="btn bg-white text-brand-red hover:bg-gray-100 text-lg px-8 py-4">Start Your Free Trial</a>
        <a href="/pricing/" class="btn bg-transparent border-2 border-white text-white hover:bg-white/10 text-lg px-8 py-4">View Pricing</a>
      </div>
    </div>
  </section>
</BaseLayout>
