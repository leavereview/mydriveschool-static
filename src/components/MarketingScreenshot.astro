---
interface Props {
  src: string;
  width: number;
  height: number;
  alt: string;
  priority?: boolean;
  class?: string;
  mobile?: boolean;
}

const { src, width, height, alt, priority = false, mobile = false, class: className = '' } = Astro.props;
const loading = priority ? 'eager' : 'lazy';
---

{mobile ? (
  <div class="mx-auto max-w-[280px] rounded-[2rem] border-[8px] border-gray-800 bg-gray-800 p-1 shadow-2xl">
    <div class="overflow-hidden rounded-[1.5rem]">
      <img
        src={src}
        width={width}
        height={height}
        alt={alt}
        loading={loading}
        decoding="async"
        class:list={['w-full h-auto', className]}
      />
    </div>
  </div>
) : (
  <img
    src={src}
    width={width}
    height={height}
    alt={alt}
    loading={loading}
    decoding="async"
    class:list={['rounded-xl shadow-lg border border-gray-200 w-full h-auto', className]}
  />
)}
