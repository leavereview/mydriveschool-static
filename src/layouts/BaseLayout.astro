---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  schemaType?: 'Article' | 'BlogPosting' | 'WebPage' | 'CollectionPage';
  publishedDate?: string;
  modifiedDate?: string;
  noindex?: boolean;
  author?: string;
}

const {
  title,
  description = 'MyDriveSchool.Software - The complete driving school management platform. Scheduling, student management, instructor allocation, and online booking.',
  image = '/images/og-default.jpg',
  type = 'website',
  schemaType,
  publishedDate,
  modifiedDate,
  noindex = false,
  author = 'John Powell'
} = Astro.props;

// Determine the schema type to use
const resolvedSchemaType = schemaType || (type === 'article' ? 'Article' : 'WebPage');

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullTitle = title === 'Home' ? 'MyDriveSchool.Software - Driving School Management Software' : `${title} | MyDriveSchool.Software`;

const schemaOrg = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://mydriveschool.software/#organization",
      "name": "MyDriveSchool.Software",
      "url": "https://mydriveschool.software",
      "logo": {
        "@type": "ImageObject",
        "url": "https://mydriveschool.software/logo.svg"
      },
      "sameAs": []
    },
    {
      "@type": "WebSite",
      "@id": "https://mydriveschool.software/#website",
      "url": "https://mydriveschool.software",
      "name": "MyDriveSchool.Software",
      "publisher": {
        "@id": "https://mydriveschool.software/#organization"
      }
    },
    {
      "@type": resolvedSchemaType,
      "@id": canonicalURL.href,
      "url": canonicalURL.href,
      "name": title,
      "description": description,
      "isPartOf": {
        "@id": "https://mydriveschool.software/#website"
      },
      ...(publishedDate && { "datePublished": publishedDate }),
      ...(modifiedDate && { "dateModified": modifiedDate }),
      ...((resolvedSchemaType === 'Article' || resolvedSchemaType === 'BlogPosting') && {
        "author": {
          "@type": "Person",
          "name": author,
          "url": "https://mydriveschool.software/about/"
        },
        "publisher": {
          "@id": "https://mydriveschool.software/#organization"
        }
      })
    }
  ]
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />

  <title>{fullTitle}</title>
  <meta name="title" content={fullTitle} />
  <meta name="description" content={description} />
  {noindex && <meta name="robots" content="noindex, nofollow" />}

  <link rel="canonical" href={canonicalURL} />

  <meta property="og:type" content={type} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, Astro.site)} />
  <meta property="og:site_name" content="MyDriveSchool.Software" />

  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={fullTitle} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={new URL(image, Astro.site)} />

  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg" />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />
</head>
<body class="min-h-screen flex flex-col">
  <Navigation />

  <main class="flex-grow pt-16 md:pt-20">
    <slot />
  </main>

  <Footer />
</body>
</html>
